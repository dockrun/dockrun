#!/bin/bash

if [ $# -ne 0 ]
then
  imagename=dockrun-$@-image
else
  echo "Please specify an image name!"
  echo "  $0 imagename"
  exit 1
fi

# Check if container exists
docker images |grep $imagename > /dev/null
if [ $? -eq 0 ]
then
  docker rmi $imagename
else
  echo "Container does not exist!"
  exit 2
fi

